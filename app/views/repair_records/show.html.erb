<div class="row-fluid">
  <div class="span5">
    <h3><%= t('.title') %></h3>
  </div>
  <div class="span7">
    <div class="pull-right">
      <div class="btn-group">
        <% if can? :read, Device %>
          <%= link_to devices_path, class: "btn" do %>
            <i class="icon-list"></i>
            <span><%= t(".index", default: t("helpers.links.index")) %></span>
          <% end %>
        <% end %>
        <% if can? :modify, @device %>
          <%= link_to edit_device_path(@device), class: "btn" do %>
            <i class="icon-pencil"></i>
            <span><%= t(".edit", default: t("helpers.links.edit")) %></span>
          <% end %>
        <% end %>
        <% if can? :destroy, @device %>
          <%= link_to @device, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do %>
            <i class="icon-trash icon-white"></i>
            <span><%= t('.destroy', default: t('helpers.links.destroy')) %></span>
          <% end %>
        <% end %>
      </div>
      <div class="btn-group">
        <%= render 'layouts/toolbar' %>
      </div>
    </div>
  </div>
</div>

