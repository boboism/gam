<%= simple_form_for(@tool, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :tool_name, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :tool_no, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :specification, input_html: {class: "input-block-level"} %> 
        </span>
        <span class="span6">
          <%= f.input :tool_type_id, collection: ToolType.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :manufacturer_id, collection: Manufacturer.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :supplier_id, collection: Supplier.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class='row'>
        <span class='span12'>
          <%= f.input :store_location, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class='row'>
        <span class='span12'>
          <%= f.input :serial_rule, input_html: {class: "input-block-level"} %>
        </span>
      </div>
    </fieldset>

  </div>

  <div class="">
    <%= f.button :submit, class: "btn btn-large btn-block btn-primary" %>
  </div>
<% end %>
