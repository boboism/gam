<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Gam" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Gam" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </div>
    </div>
    <div id="main" role="main">
      <div class="container">
        <div class="row-fluid">
          <% unless current_user %>
            <div class="span12">
              <div class="content">
                <%= render 'layouts/messages' %>
                <%= yield %>
              </div>
            </div>
          <% else %>
            <div class="span2">
              <%= render 'layouts/navlist' %>
            </div>
            <div class="span10">
              <div class="content">
                <%= render 'layouts/messages' %>
                <%= yield %>
              </div>
            </div>
          <% end %>
          <div class="footer">
          </div>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
