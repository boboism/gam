<%= simple_form_for(@device, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <legend class="text-success"><%= t('.basic_info') %></legend>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :device_name, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :device_no, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :specification, input_html: {class: "input-block-level"} %> 
        </span>
        <span class="span6">
          <%= f.input :category_id, collection: Category.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :manufacturer_id, collection: Manufacturer.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :supplier_id, collection: Supplier.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class='row'>
        <span class='span12'>
        </span>
      </div>
    </fieldset>
    <fieldset>
      <legend class="text-success"><%= t('.accounting_info') %></legend>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :service_date, as: :string, input_html: {class: "input-block-level", :"data-behavior" => "datepicker"} %>
        </span>
        <span class="span4">
          <%= f.input :original_cost, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :responsible_by_id, collection: User.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :depreciation_method, collection: Device.depreciation_method_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :salvage_rate, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :depreciation_life, input_html: {class: "input-block-level"} %>
        </span>
      </div>
    </fieldset>
    <fieldset>
      <legend class="text-success"><%= t('.maintenance_info') %></legend>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :inspection_period, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :inspection_date_prev, as: :string, input_html: {class: "input-block-level", :"data-behavior" => "datepicker" } %>
        </span>
        <span class="span4">
          <%= f.input :inspection_date_next, as: :string, input_html: {class: "input-block-level", :"data-behavior" => "datepicker" } %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :service_status, collection: Device.service_status_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span8">
          <%= f.input :user_department_id, collection: Department.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :operator_id, collection: User.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span8">
          <%= f.input :installation_site_id, collection: InstallationSite.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
    </fieldset>

  </div>

  <div class="">
    <%= f.button :submit, class: "btn btn-large btn-block btn-primary" %>
  </div>
<% end %>
