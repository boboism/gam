<%= simple_form_for(@sparepart_trans_doc_in, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :trans_date, as: :string, input_html: {class: "input-block-level", :"data-behavior" => "datepicker"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :doc_no, input_html: {class: "input-block-level"} %> 
        </span>
        <span class="span6">
          <%= f.input :user_department_id, collection: Department.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :trans_type_id, collection: TransDocInType.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :remark, input_html: {class: "input-block-level"} %>
        </span>
      </div>
    </fieldset>
    <fieldset>
      <%= f.simple_fields_for :items do |itf| %>
        <div class="row-fluid">
          <span class="span8">
            <%= itf.input :sparepart_id, collection: Sparepart.selectable_list, input_html: {class: "input-block-level"} %>
          </span>
          <span class="span4">
            <%= itf.input :quantity, input_html: {class: "input-block-level"} %>
          </span>
        </div>
      <% end %>
    </fieldset>
  </div>

  <div class="">
    <%= f.button :submit, class: "btn btn-large btn-block btn-primary" %>
  </div>
<% end %>
