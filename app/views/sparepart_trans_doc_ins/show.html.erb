<div class="row-fluid">
  <div class="span5">
    <h3><%= t('.title') %></h3>
  </div>
  <div class="span7">
    <div class="pull-right">
      <div class="btn-group">
        <% if can? :read, SparepartTransDocIn %>
          <%= link_to sparepart_trans_doc_ins_path, class: "btn" do %>
            <i class="icon-list"></i>
            <span><%= t(".index", default: t("helpers.links.index")) %></span>
          <% end %>
        <% end %>
        <% if can? :modify, @sparepart_trans_doc_in %>
          <%= link_to edit_sparepart_trans_doc_in_path(@sparepart_trans_doc_in), class: "btn" do %>
            <i class="icon-pencil"></i>
            <span><%= t(".edit", default: t("helpers.links.edit")) %></span>
          <% end %>
        <% end %>
        <% if can? :destroy, @sparepart_trans_doc_in %>
          <%= link_to @sparepart_trans_doc_in, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do %>
            <i class="icon-trash icon-white"></i>
            <span><%= t('.destroy', default: t('helpers.links.destroy')) %></span>
          <% end %>
        <% end %>
      </div>
      <div class="btn-group">
        <%= render 'layouts/toolbar' %>
      </div>
    </div>
  </div>
</div>


<div class="row-fluid">
  <span class="span2 text-right text-info"><h4><%= SparepartTransDocIn.human_attribute_name(:trans_date) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart_trans_doc_in.trans_date %></h4></span>
</div>
<div class="row-fluid">
  <span class="span2 text-right text-info"><h4><%= SparepartTransDocIn.human_attribute_name(:doc_no) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart_trans_doc_in.doc_no %></h4></span>
  <span class="span2 text-right text-info"><h4><%= SparepartTransDocIn.human_attribute_name(:user_department_id) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart_trans_doc_in.user_department.try(:name) %></h4></span>
</div>
<div class="row-fluid">
  <span class="span2 text-right text-info"><h4><%= SparepartTransDocIn.human_attribute_name(:trans_type) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart_trans_doc_in.trans_type.try(:name) %></h4></span>
  <span class="span2 text-right text-info"><h4><%= SparepartTransDocIn.human_attribute_name(:remark) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart_trans_doc_in.remark %></h4></span>
</div>
<legend><%= t('.items') %></legend>
<% unless @sparepart_trans_doc_in.items.empty? %>
  <div class="row-fluid">
    <span class="span4 text-center"><h4><%= SparepartTransDocItemIn.human_attribute_name(:part_no) %></h4></span> 
    <span class="span4 text-center"><h4><%= SparepartTransDocItemIn.human_attribute_name(:part_name) %></h4></span> 
    <span class="span4 text-center"><h4><%= SparepartTransDocItemIn.human_attribute_name(:quantity) %></h4></span> 
  <% @sparepart_trans_doc_in.items.each do |item| %>
    <div class="row-fluid">
      <span class="span4 text-center"><%= item.sparepart_no %></span>
      <span class="span4 text-center"><%= item.sparepart_name %></span>
      <span class="span4 text-center"><%= item.quantity %></span>
    </div>
  <% end %>
<% end %>
