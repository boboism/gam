<div class="row-fluid">
  <div class="span5">
    <h3><%= t('.title') %></h3>
  </div>
  <div class="span7">
    <div class="pull-right">
      <div class="btn-group">
        <% if can? :read, Sparepart %>
          <%= link_to spareparts_path, class: "btn" do %>
            <i class="icon-list"></i>
            <span><%= t(".index", default: t("helpers.links.index")) %></span>
          <% end %>
        <% end %>
        <% if can? :modify, @sparepart %>
          <%= link_to edit_sparepart_path(@sparepart), class: "btn" do %>
            <i class="icon-pencil"></i>
            <span><%= t(".edit", default: t("helpers.links.edit")) %></span>
          <% end %>
        <% end %>
        <% if can? :destroy, @sparepart %>
          <%= link_to @sparepart, method: :delete, data: {confirm: t(".destroy_confirm", default: t("helpers.links.destroy_confirm"))}, class: "btn btn-danger" do %>
            <i class="icon-trash icon-white"></i>
            <span><%= t('.destroy', default: t('helpers.links.destroy')) %></span>
          <% end %>
        <% end %>
      </div>
      <div class="btn-group">
        <%= render 'layouts/toolbar' %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <span class="span2 text-right text-info"><h4><%= Sparepart.human_attribute_name(:part_name) %></h4></span>
  <span class="span4 text-left"><h4><%= @sparepart.part_name %></h4></span>
  <span class="span2 text-right text-info"><h4><%= Sparepart.human_attribute_name(:part_no) %></h4></span>
