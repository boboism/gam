<%= simple_form_for(@sparepart, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :part_name, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :part_no, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :specification, input_html: {class: "input-block-level"} %> 
        </span>
        <span class="span6">
          <%= f.input :part_type_id, collection: PartType.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :uom, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :unit_price, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span6">
          <%= f.input :manufacturer_id, collection: Manufacturer.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span6">
          <%= f.input :supplier_id, collection: Supplier.selectable_list, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span12">
          <%= f.input :store_location, input_html: {class: "input-block-level"} %>
        </span>
      </div>
      <div class="row-fluid">
        <span class="span4">
          <%= f.input :stock_current, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :stock_max, input_html: {class: "input-block-level"} %>
        </span>
        <span class="span4">
          <%= f.input :stock_min, input_html: {class: "input-block-level"} %>
        </span>
      </div>
    </fieldset>

  </div>

  <div class="">
    <%= f.button :submit, class: "btn btn-large btn-block btn-primary" %>
  </div>
<% end %>
