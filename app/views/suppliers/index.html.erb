<h1>Listing suppliers</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Index</th>
    <th>Key</th>
    <th>Status</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @suppliers.each do |supplier| %>
  <tr>
    <td><%= supplier.description %></td>
    <td><%= supplier.index %></td>
    <td><%= supplier.key %></td>
    <td><%= supplier.status %></td>
    <td><%= supplier.value %></td>
    <td><%= link_to 'Show', supplier %></td>
    <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
    <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

